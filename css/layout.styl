narrow-width = 60px

@-webkit-keyframes breath
	60%
		background-position 0px -17px
.loaderlayer
	background url("/assets/images/upfeathers.png") repeat
	-webkit-animation breath 6s infinite ease-in-out
	.breath
		-webkit-animation breath 2s infinite ease-in-out
	.tips
		position relative
		top 67%
		text-align center
		display block
		font-size 1.5em
		color #6D7578
		width 200px
		margin 0 auto
		opacity 0.8
		.fa
			font-size 0.8em
			margin-left 10px
body.loading
	.inav
		display none
	.loaderlayer
		display block
		z-index 1039

#flash_message
	position fixed
	top 0
	left 0
	width 100%
	z-index 1200
	.flash
		border-radius 0
		margin-bottom 0
		border none

.overflow-layer
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 1031
	display none
	.overflow-body
		margin-top 50px
		padding-top 10px

.modal
	.subtitle
		padding-left 7px
		border-left 4px solid #0e60c7

.inav
	.brand
		text-align center
		position relative
		&:hover
			color #08f
			text-shadow 0 -1px 0 rgba(0,0,0,0.25)
	.name
		font-size 100%
		line-height 1.5
		display inline-block
		margin 10px
	.navbar-nav>li>a:hover
		background-color #EEE

::-webkit-scrollbar
	width 10px
	height 10px
::-webkit-scrollbar-track
	background #fff
::-webkit-scrollbar-thumb
	background rgba(0,0,0,0.3)

.quiz_view
	margin-top 50px
	padding 20px
	.tab-content
		padding 15px 0
	.empty_quiz_view
		padding 100px 0
	.quiz_item
		position relative
		a
			text-decoration none
		.panel-body
			overflow hidden
			position relative
			.title
				font-size 1.5em
				color #333
				padding-right 15px
				ellipsis()
			.private-icon
				position absolute
				right 5px
				top 5px
			.label
				margin-right 5px
		.panel-footer
			position relative
			padding-right 50px
			.action
				position absolute
				right 5px
				top 10px
				display none
				.btn
					margin-left 5px
		a:hover
			.action
				display block
			.panel
				-webkit-box-shadow 0 5px 10px rgba(0, 0, 0, 0.2)
				box-shadow 0 5px 10px rgba(0, 0, 0, 0.2)


#pic_uploader
	width 0
	height 0
	position absolute
	top 0
	left 0
	overflow hidden
