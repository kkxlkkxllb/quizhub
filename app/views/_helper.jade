mixin share(social,link,title)
	case social
		when "twitter"
			- var url = "https://twitter.com/share?url=" + link + "&text=" + title
			- var icon = "fa-twitter"
		when "facebook"
			- var url = "http://www.facebook.com/share.php?u=" + link
			- var icon = "fa-facebook-square"
		when "google-plus"
			- var url = "https://plusone.google.com/_/+1/confirm?hl=en&url=" + link
			- var icon = "fa-google-plus-square"
		when "tumblr"
			- var url = "http://www.tumblr.com/share?v=3&u=" + link
			- var icon = "fa-tumblr-square"
		when "qq"
			- var url = "http://connect.qq.com/widget/shareqq/index.html?url=" + link + "&title=" + title + "&source=shareqq&desc=很棒的文章～"
			- var icon = "fa-qq"
		when "mail"
			- var url = "mailto:?subject=" + title + "&body=" + link
			- var icon = "fa-envelope"
		when "weibo"
			- var url = "http://service.weibo.com/share/share.php?url=" + link
			- var icon = "fa-weibo"
	a.share-btn(href=url target="blank")
		i.fa(class = [icon])
